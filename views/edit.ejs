<%- include('partials/header') %>

<div class="ui main text container segment">
  <div class="ui huge header">Edit <%= blog.title %></div>
  <form class="ui form" action="/blogs/<%= blog._id %>" method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" value="<%= blog.title %>" name="title" />
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" value="<%= blog.image %>" name="image" />
    </div>
    <div class="field">
      <label>Blog Content</label>
      <textarea name="body"> <%= blog.body %> </textarea>
    </div>
    <div class="field">
      <input class="ui violet big basic button" type="submit" />
    </div>
  </form>
</div>

<%- include('partials/footer') %>
